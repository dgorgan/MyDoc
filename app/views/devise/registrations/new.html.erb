<div class="row">
  <div class="col-md-6 col-md-offset-3 text-center">
    <% if params[:plan] == '2' %>
      <h1>Paid Account</h1>
      <p style="font-weight: bold">Sign up for a paid account for $5/month and leave comments with doctors directly!</p>
    <% else %>
      <h1>Free Account</h1>
      <p style="font-weight: bold">Sign up for free and upvote doctors today! You may still leave comments with disqus without signing up.</p>
    <% end %>
  </div>
  <div class="col-md-4 col-md-offset-4">
    <div class="well">
    <h2>Sign up</h2>
      <% if params[:plan] == '2' %>
        <%= render "paid_form" %>
      <% else %>
        <%= render "free_form" %>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
