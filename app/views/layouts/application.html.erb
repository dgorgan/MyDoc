<!DOCTYPE html>
<html>
<head>
  <title>MyDoc</title>
  <%= stylesheet_link_tag    'application', media: 'all'%>
  <%= stylesheet_link_tag    'https://fonts.googleapis.com/css?family=Cinzel' , media: 'all'%>
  <%= stylesheet_link_tag    'https://fonts.googleapis.com/css?family=Montserrat:700' , media: 'all'%>
  <%= stylesheet_link_tag    'https://fonts.googleapis.com/css?family=Raleway:500', media: 'all'%>
  <%= javascript_include_tag "https://js.stripe.com/v2/", type: 'text/javascript' %>
  <%= javascript_include_tag 'application' %>
  <%= javascript_include_tag 'users'%>
  <%= tag :meta, :name => "stripe-key", :content => STRIPE_PUBLIC_KEY %>

  <%= csrf_meta_tags %>
</head>
<body>
  <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
    <div class='container'>
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#main-nav-collapse">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>

        <%= link_to root_path, class: 'navbar-brand' do %>
          <span class="glyphicon glyphicon-briefcase" aria-hidden="true"></span>
            <span id="logo">MyDoc</span>
        <% end %>
     </div>

      <div class="collapse navbar-collapse" id="main-nav-collapse">
        <ul class="nav navbar-nav navbar-right right-side-nav">
          <li><%= link_to "About", about_path %></li>

          <% if current_user %>
            <li><%= link_to 'Signout', destroy_user_session_path, class: "btn btn-danger", :method => :delete  %></li>
          <% else %>
            <li><%= link_to 'Login', new_user_session_path, class: "btn btn-primary" %></li>
          <% end %>

        </ul>
      </div><!-- /.navbar-collapse -->
    </div>
  </nav>



  <div class="container">
    <% flash.each do |key, value| %>
      <%= content_tag :div, value, class: "alert alert-#{key} text-center" %>
    <% end %>

    <%= yield %>
  </div>

  <script id="dsq-count-scr" src="//mydoc-hailhydra.disqus.com/count.js" async></script>

</body>
</html>
